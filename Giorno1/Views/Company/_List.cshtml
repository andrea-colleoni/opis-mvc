@model IEnumerable<Giorno1Oggetti.Company>

<table id="tbl-company" class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                Telefono
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                N° dipendenti
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Indirizzo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr data-companyid="@Html.DisplayFor(modelItem => item.CompanyId)">
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroDipendenti)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Indirizzo)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CompanyId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CompanyId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CompanyId })
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script>
        $(function () {
            
        });
    </script>
}